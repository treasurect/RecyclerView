<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/download_more_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:layout_width="90dp"
        android:layout_height="77.1dp"
        android:layout_gravity="right"
        android:layout_marginRight="16dp"
        android:layout_marginTop="59.2dp"
        android:background="@mipmap/ic_more_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_download_more_delete"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8.1dp"
            android:drawableLeft="@drawable/toolbar_icon_delete_color"
            android:drawablePadding="-6dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Delete"
            android:textColor="@color/color_black_text"
            android:textSize="14sp" />

        <View
            android:layout_width="75dp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:background="#FFD2D2D2" />

        <TextView
            android:id="@+id/btn_download_more_report"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="8dp"
            android:drawableLeft="@drawable/toolbar_icon_report_color"
            android:drawablePadding="-6dp"
            android:gravity="center"
            android:fontFamily="sans-serif"
            android:text="Report"
            android:textColor="@color/color_black_text"
            android:textSize="14sp" />
    </LinearLayout>
</FrameLayout>