<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_detaillist_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_detaillist_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:src="@mipmap/pic_beautiful_girl" />

        <TextView
            android:id="@+id/item_detaillist_hot_num"
            android:layout_width="59dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:background="@color/color_black_shadow2"
            android:drawableLeft="@mipmap/ic_16dp_hot"
            android:drawablePadding="2dp"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_vertical"
            android:text="12345"
            android:textColor="#FFD7D7D7"
            android:textSize="12dp" />

        <View
            android:id="@+id/item_detaillist_cover"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground" />
    </RelativeLayout>

    <TextView
        android:id="@+id/item_detaillist_use"
        android:layout_width="match_parent"
        android:layout_height="33dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/scene_use_item_selector"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:paddingBottom="2dp"
        android:text="USE"
        android:textColor="@color/color_white"
        android:textSize="15sp" />

</LinearLayout>